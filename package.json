{
  "name": "context-crafter",
  "version": "1.0.0",
  "description": "Gather note context with metadata for AI/LLM prompts",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "context",
    "ai",
    "llm"
  ],
  "author": "Terry Li",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.19.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "0.20.2",
    "obsidian": "^1.5.0",
    "typescript": "5.4.5"
  }
}
